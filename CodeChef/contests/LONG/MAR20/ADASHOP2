#include<bits/stdc++.h>
using namespace std;

int main() {
ios::sync_with_stdio(false);
cin.tie(0);
int t;
cin>>t;
while(t--){
    int r,c;
    cin>>r>>c;
    if(r==c)
    {
        cout<<20<<"\n";
        cout<<"1 1\n2 2\n1 3\n3 1\n4 2\n1 5\n5 1\n6 2\n1 7\n7 1\n8 2\n2 8\n7 3\n8 4\n4 8\n7 5\n8 6\n6 8\n7 7\n8 8\n";
    }
    else
   { cout<<"21\n";
   cout<<(r+c)/2<<" "<<(r+c)/2<<"\n"<<"1 1\n2 2\n1 3\n3 1\n4 2\n1 5\n5 1\n6 2\n1 7\n7 1\n8 2\n2 8\n7 3\n8 4\n4 8\n7 5\n8 6\n6 8\n7 7\n8 8\n";
}
}
	return 0;
}
