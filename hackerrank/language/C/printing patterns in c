#include<stdio.h>

int min( int x , int y){
    if(x<y) return x;
    else return y;
}

int main(){

    int n;
    scanf("%d" , &n);

    for( int i=0 ; i<2*n-1 ; i++){
        for( int j=0 ; j<2*n-1 ; j++){
            int m = min(i,j);
            m = min(m , 2*n-1 - i - 1);
            m = min(m , 2*n-1 -j -1);
            printf("%d " , n-m);
        }
        printf("\n");
    }

    return 0;
}
#include<stdio.h>

int min( int x , int y){
    if(x<y) return x;
    else return y;
}

int main(){

    int n;
    scanf("%d" , &n);

    for( int i=0 ; i<2*n-1 ; i++){
        for( int j=0 ; j<2*n-1 ; j++){
            int m = min(i,j);
            m = min(m , 2*n-1 - i - 1);
            m = min(m , 2*n-1 -j -1);
            printf("%d " , n-m);
        }
        printf("\n");
    }

    return 0;
}

//expected output 
//int n=2;
//   222
//   212
//   222
