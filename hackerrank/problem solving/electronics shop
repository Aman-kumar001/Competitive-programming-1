#include<stdio.h>


int main(){

    long long int b;
    long long int n,m;
    scanf("%lld%lld%lld" , &b , &n , &m);
    long long int a1[n];
    long long int a2[m];
    for( int i=0 ; i<m ; i++){
        scanf("%lld" , &a1[i]);
    }
    for( int i=0 ; i<n ; i++){
        scanf("%lld" , &a2[i]);
    }
    long long int max=-1;
    for( int i=0 ; i<n ; i++){
        for(int j=0 ; j<m ; j++){
            if((a1[i]+a2[j]>max) && (a1[i]+a2[j]<=b)){
                max = a1[i]+a2[j];
            }
        }
    }
    printf("%lld" , max);


    return 0;
}
