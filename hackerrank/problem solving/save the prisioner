#include<bits/stdc++.h>
using namespace std;

static int prob(int n, int m, int s){
      int a = s+m-1;   
        if(a>n){
            if(a%n==0){
                return n;
            }
            return a%n;
        }
      
         return a;
    }

int main(){
    int t;
    cin >> t;
    while(t--){
    int n,m,s;
    cin >> n >> m >> s;
    cout << prob(n,m,s) << endl;
}
}
