#include<iostream>
#define fast ios_base::sync_with_stdio(false); cin.tie(NULL);cout.tie(NULL);
using namespace std;


int main(){
    fast;
    int n;
    cin >> n;
    int d ;
    cin >> d;
    int a[n];
    for(int i=0 ; i<n ; i++){
        cin >> a[i];
    }
    
    int count=0;

    for(int i=0 ; i<n ; i++){
        for(int j=i+1 ; j<n ; j++){
            for(int k=j+1 ; k<n ; k++){
                if((a[j]-a[i] ==d) && (a[k]-a[j] == d)){
                    count++;
                }
            }
        }
    }
    cout << count << endl;
}
