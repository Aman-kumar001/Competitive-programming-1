#include<stdio.h>
int main(){
int n,k;
scanf("%d%d",&n,&k);
int h[n];
for(int i=0 ; i<n ; i++){
scanf("%d",&h[i]);
}
int max=h[0];
for(int i=0 ; i<n ; i++){
        if(max<h[i]){
        max = h[i];
        }
}
        if(max<k){
        printf("0\n");
        }
        else{
        printf("%d\n" , max-k);
        }


return 0;
}
               
